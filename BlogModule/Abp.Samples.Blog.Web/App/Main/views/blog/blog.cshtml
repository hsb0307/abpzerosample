<div ng-controller="app.views.blog as vm">
    <h1>Blog Posts</h1>
    <div class="row">
        <div class="col-md-12">
            <ul class="list-group">
                <li class="list-group-item" ng-repeat="post in vm.posts">
                    <h4>{{post.title}}</h4>
                    <p>{{post.content}}</p>
                </li>
            </ul>
        </div>
    </div>
</div>